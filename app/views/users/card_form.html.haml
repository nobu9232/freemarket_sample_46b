- breadcrumb :card_create
.card-info
  .container
    = render 'side_bar'
    .card_create-information
      %h1
        クレジットカード情報入力
      .card_create-content
        = form_with model: @user do |f|
          .form-inner
            = f.label "カード番号"
            %span 必須
            = f.text_field :card_number, autofocus: true, class: "card-number", placeholder: "半角数字のみ"
            %ul.error__card_number
            %ul.card
              %li.card__list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2927923569", :width => "49"}/
              %li.card__list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2927923569", :width => "34"}
              %li.card__list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2927923569", :width => "30"}
              %li.card__list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2927923569", :width => "32"}
              %li.card__list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2927923569", :width => "21"}
              %li.card__list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2927923569", :width => "32"}
              %li.card__list
                %img{:alt => "", :height => "20", :src => "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2927923569", :width => "32"}
          .form-inner
            = f.label "有効期限"
            %span 必須
            .exp-select
              %select#exp_month{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12 
              %span.exp-select__month
                月
              %select#exp_year{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span.exp-select__year
                年
              .fa.fa-chevron-down.exp-select__chevron--month
              .fa.fa-chevron-down.exp-select__chevron--year         
            %ul.error__card_expire
          .form-inner          
            = f.label "セキュリティコード"
            %span 必須
            = f.text_field :cvc, autofocus: true, class: "cvc", placeholder: "カードの背面4桁もしくは3桁の番号"
            %ul.error__cvc
            
            .form-inner__right-text
              カード裏面の番号とは？    
          .form-inner 
          = f.submit "追加する", class: "button payjp"
          -# 支払いボタン仮置き
          = link_to "支払う", pay_users_path, method: :post
 