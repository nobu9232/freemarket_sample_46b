.side-bar  
  .sort-select-container
    = select_tag 'sort', options_for_select([["価格の安い順","price_asc"], ["価格の高い順","price_desc"], ["出品の古い順","created_asc"], ["出品の新しい順","created_desc"], ["いいねの多い順","like_desc"]],:selected=>"5"), prompt: '並び替え', class: 'sort-select'
    %i.fa.fa-chevron-down
  
  .search-dropdown-contents
    %h3
      詳細検索
    = search_form_for @q do |f|
      %label
        %i.fa.fa-plus
        %span キーワードを追加する
      = f.search_field :name_cont ,class: 'input-default'

      .search-buttons
        .search-buttons__reset
          クリア
        =f.submit '完了', class: 'search-buttons__submit'
    

